<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration PUBLIC
"-//Hibernate/Hibernate Configuration DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
        <property name="hibernate.bytecode.use_reflection_optimizer">false</property>
        <property name="hibernate.connection.driver_class">com.mysql.jdbc.Driver</property>
        <property name="hibernate.connection.password"></property>
        <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/rbir</property>
        <property name="hibernate.connection.username">root</property>
        <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
        <property name="hibernate.hbm2ddl.auto">update</property>
        <property name="show_sql">true</property>
        
        
        <mapping class="aztec.rbir_database.Entities.Document"></mapping>
        <mapping class="aztec.rbir_database.Entities.Keyword"></mapping>
        <mapping class="aztec.rbir_database.Entities.KeywordsInDocument"></mapping>
        <mapping class="aztec.rbir_database.Entities.User"></mapping>
        <mapping class="aztec.rbir_database.Entities.Role"></mapping>
        <mapping class="aztec.rbir_database.Entities.UserRole"></mapping>
        <mapping class="aztec.rbir_database.Entities.PublicUser"></mapping>
        <mapping class="aztec.rbir_database.Entities.Request"></mapping>
        <mapping class="aztec.rbir_database.Entities.Searches"></mapping>
        <mapping class="aztec.rbir_database.Entities.SearchResultToConfirm"></mapping>
    </session-factory>
</hibernate-configuration>